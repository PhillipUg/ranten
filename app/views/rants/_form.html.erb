
<%= form_with model: @rant, url: rants_path do |f| %>

		<%= f.label "Rant about it", class: "label" %>
  <div class="field">
  <div class="control">
    <%= f.text_area :content, class: "textarea is-small", placeholder: "Rant about something...", autofocus: true, id: :content %>
  </div>
</div>

<%= f.submit "Rant", class: "button is-info" %>
<% end %>
