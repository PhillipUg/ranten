
<%= form_with model: @rant, url: rants_path do |f| %>
  <%#= f.error_notification %>
  <%#= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
		<%= f.label "Rant about it", class: "label" %>
  <div class="field">
  <div class="control">
    <%= f.text_area :content, class: "textarea", placeholder: "Rant about something...", autofocus: true %>
  </div>
</div>

<%= f.submit "Rant", class: "button is-info" %>
<% end %>
