

<div class="column is-two-thirds ">

	<div class="tabs">
		<ul>
			<li class="is-active"><a>RANTS</a></li>
			<li><a>PHOTOS</a></li>
			<li><a>VIDEOS</a></li>
		</ul>
	</div>
	<section class="feed">
		<article class="box-form">
			<%= render 'rants/form' %>
		</article>

		<article class="boxed">
			<% @rants.each do |rant| %>
			<article class="rant">
				<div class="">
					<%= default_avatar(rant.author) %>
				</div>
				<div class="rant-content">
					<strong><%= link_to "#{rant.author.full_name.capitalize}", user_path(rant.author.id), class: "name" %></strong>
					<small class="small"><%= time_ago_in_words(rant.created_at) %></small>
					<p><%= rant.content %></p>
				</div>

				<% if current_user.id == rant.author_id %>
				<nav class="level">
					<div class="level-left is-mobile">
						<%= link_to rant, class: "level-item" do %>
						<span class="icon"><i class="far fa-heart" aria-hidden="true"></i></span>
						<% end %>

						<%= link_to rant, method: :delete, data: { confirm: "Are you sure you want to delete this rant?"}, class: "level-item" do %>
						<span class="icon"><i class="fas fa-trash-alt" aria-hidden="true"></i></span>
						<% end %>
					</div>
				</nav>
				<% else %>
				<div class="level-left level-items">
				<%= link_to rant, class: "level-item" do %>
				<span class="icon"><i class="far fa-heart" aria-hidden="true"></i></span>
				<% end %>
				<span class="icon"><i class="fa fa-retweet" aria-hidden="true"></i></span>
				</div>
				<% end %>
			</article>

			<% end %>
		</article>
	</section>
</div>