<div class="column is-2 profile">
	<article class="prof">
		<div class="prof-img">
			<%= default_avatar(current_user) %>
		</div>
		
		<div class="prof-name">
			<%= current_user.full_name.upcase %>
		</div>
	</article>

	<div class="follow">
		<div class="folw">
			<p class="numb"><%= current_user.followed_users.count %></p>
			<p class="follow-text">Following</p>
		</div>
		<div class="folw">
			<p class="numb"><%= current_user.users_following.count %></p>
			<p class="follow-text">Followers</p>
		</div>
	</div>

	<div>
		<ul class="side-nav">
			<li><a href="#">HOME</a></li>
			<li><a href="#">CONNECT</a></li>
			<li><a href="#">DISCOVER</a></li>
			<li><a href="#">PROFILE</a></li>
			<li><a href="#">STATISTICS</a></li>
		</ul>
	</div>
</div>
