
<div class="section">
  <div class="container">
    <div class="columns is-centered">

      <div class="column is-4">

        <h2 class="title is-2">Sign Up</h2>

        <%= simple_form_for(@user) do |f| %>
        <%= f.error_notification %>
        <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

        <div class="field">
         <div class="control">
          <%= f.input :username, 
          autofocus: true,
          input_html: { class: "input", id: :username }, wrapper: false, label_html: {class: "label"} %>
        </div>
      </div>

      <div class="field">
       <div class="control">
        <%= f.input :full_name,
        input_html: { class: "input", id: :full_name }, wrapper: false, label_html: {class: "label"} %>
      </div>
    </div>


    <div class="field">
     <div class="control">
    <strong><%= f.label "Profile photo " %></strong> <br>
      <%= f.file_field :photo,
      input_html: { class: "input" }, wrapper: false, label_html: {class: "label"} %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <strong> <%= f.label "Cover photo " %></strong><br>
      <%= f.file_field :cover_image, input_html: { class: "input" }, wrapper: false, label_html: {class: "label"} %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.button :submit, "Sign up", class: "button is-info is-medium" %>
    </div>
  </div>

  <% end %>

  <br />

</div>
</div>
</div>
</div>