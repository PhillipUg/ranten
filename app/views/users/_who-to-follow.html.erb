<div class="column">
	<nav class="panel">
		<p class="panel-heading">Who to Follow</p>
		<% @users.each do |user| %>
		<% if user.id != current_user.id %>
		<div class="panel-block">
			<article class="media">
				<div class="media-left">
					<figure class="image is-32x32">
						<img src="https://bulma.io/images/placeholders/64x64.png" class="avatar">
					</figure>
				</div>
				<div class="media-content">
					<div class="content">
						<p>
							<strong><%= link_to "#{user.full_name.capitalize}", user_path(user.id) %></strong><br>
							<small>@<%= user.username %></small>
						</p>
					</div>
				</div>
			</article>
		</div>
		<% end %>
		<% end %>
	</nav>
</div>